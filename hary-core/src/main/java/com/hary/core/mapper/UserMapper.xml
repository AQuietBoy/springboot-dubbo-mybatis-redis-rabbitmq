<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hary.core.mapper.UserMapper" >

  <!-- 结果集 -->
  <resultMap id="BaseResultMap" type="com.hary.core.entity.User" >
    <id column="ID" property="id" jdbcType="INTEGER" />
    <result column="USERNAME" property="username" jdbcType="VARCHAR" />
    <result column="PASSWORD" property="password" jdbcType="VARCHAR" />
    <result column="REALNAME" property="realname" jdbcType="VARCHAR" />
  </resultMap>

  <!-- sql文件 -->
  <sql id="Base_Column_List" >
    ID, USERNAME, PASSWORD, REALNAME
  </sql>

  <!-- 查询User的总数 -->
  <select id="queryRecord" resultType="Integer">
    select count(*) from user
  </select>

  <!-- 查询所有的User -->
  <select id="queryAllUser" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from user
  </select>

  <!-- 根据UserID查询User -->
  <select id="queryUserByID" resultMap="BaseResultMap" parameterType="java.lang.Integer">
    select
    <include refid="Base_Column_List"/>
    from user
    where id = #{id}
  </select>

  <!-- 分页查询User -->
  <select id="queryUserByPage" resultMap="BaseResultMap" parameterType="java.lang.Integer">
    select
    <include refid="Base_Column_List"/>
    from user
    limit #{beginIndex} , #{usersPerPage}
  </select>

  <!-- 根据用户名和密码查询User -->
  <select id="queryUserByUsernameAndPassword" resultMap="BaseResultMap" parameterType="java.lang.String">
    select
    <include refid="Base_Column_List"/>
    from user
    where username = #{username} and password = #{password}
  </select>

  <!-- 根据UserID删除User -->
  <delete id="deleteUserByID" parameterType="java.lang.Integer" >
    delete from user
    where id = #{id}
  </delete>

  <!-- 添加User -->
  <insert id="addUser" parameterType="com.hary.core.entity.User" >
    insert into user (username, password, realname)
    values (#{username}, #{password}, #{realname})
  </insert>

  <!-- 根据UserID更新UserPassword -->
  <update id="updateUserPasswordById" parameterType="java.lang.String" >
    update user
    set password = #{password},
    where id = #{id}
  </update>
</mapper>